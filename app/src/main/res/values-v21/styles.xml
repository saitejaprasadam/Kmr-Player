<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:navigationBarColor">@android:color/black</item>

        <item name="md_item_color">@color/black</item>
        <item name="md_content_color">@color/black</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/black</item>
        <item name="android:elevation">0dp</item>

        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="popupMenuStyle">@style/PopupMenu</item>
    </style>

    <style name="MainActivityNoActionBar" parent="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:elevation">0dp</item>

        <item name="android:windowEnterTransition">@transition/albums_image_transition</item>
        <item name="android:windowExitTransition">@transition/albums_image_transition</item>
        <item name="android:windowSharedElementEnterTransition">@transition/albums_image_transition</item>
        <item name="android:windowSharedElementExitTransition">@transition/albums_image_transition</item>
    </style>
    <style name="MainActivityNoActionBar.BrandedLaunch" parent="MainActivityNoActionBar">
        <item name="android:windowBackground">@drawable/branded_launch_logo</item>
    </style>

    <style name="AppTheme.ActionBar.TransparentContextTranscition" parent="AppTheme.NoActionBar">
        <item name="android:windowActivityTransitions">true</item>
        <item name="android:windowContentTransitions">true</item>

        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:windowTranslucentStatus">true</item>

        <item name="android:itemBackground">@android:color/white</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="ColoredStatusBarNoActionBar" parent="MainActivityNoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <item name="android:elevation">0dp</item>
    </style>
    <style name="ColoredStatusBar" parent="AppTheme"/>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@android:color/white</item>
    </style>
    <style name="PopupMenu" parent="@style/Widget.AppCompat.PopupMenu.Overflow">
        <item name="android:popupBackground">@android:color/white</item>
    </style>
    <style name="TransperantToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:popupMenuStyle">@style/PopupMenu</item>
    </style>

</resources>