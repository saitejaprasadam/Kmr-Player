<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rootLayout_recycler_view"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_margin="5dp"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <RelativeLayout
                android:layout_width="200dp"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/background_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:contentDescription="@string/background_image_view_text" />

                <ImageView
                    android:id="@+id/album_art_image_view4"
                    android:layout_width="120dp"
                    android:layout_height="80dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="80dp"
                    android:contentDescription="@string/album_art_image_view_text"/>

                <ImageView
                    android:id="@+id/album_art_image_view3"
                    android:layout_width="120dp"
                    android:layout_height="90dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="65dp"
                    android:contentDescription="@string/album_art_image_view_text"/>

                <ImageView
                    android:id="@+id/album_art_image_view2"
                    android:layout_width="120dp"
                    android:layout_height="100dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="40dp"
                    android:contentDescription="@string/album_art_image_view_text"/>

                <ImageView
                    android:id="@+id/album_art_image_view1"
                    android:layout_width="120dp"
                    android:layout_height="110dp"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="5dp"
                    android:contentDescription="@string/album_art_image_view_text"/>

        </RelativeLayout>

        <RelativeLayout
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="5dp">

                <TextView
                    android:id="@+id/playlist_name_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/md_title_textsize" />

                <TextView
                    android:id="@+id/songs_count_text_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <ImageView
                android:id="@+id/context_menu"
                android:clickable="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/ic_more_vert_black_24dp"
                android:background="?attr/selectableItemBackground"/>

        </RelativeLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>