<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:id="@+id/vertical_sliding_drawer_root_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="75">

        <ImageView
            android:id="@+id/vertical_slide_drawer_blurred_image_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@mipmap/ic_launcher"
            android:clickable="true"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"/>

        <include
            layout="@layout/include_action_bar_gradient"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <View
                android:layout_height="match_parent"
                android:layout_weight=".10"
                android:layout_width="0dp" />


            <android.support.v7.widget.CardView
                android:id="@+id/now_playing_album_art_container"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:layout_height="wrap_content"
                android:layout_weight="0.80"
                card_view:cardBackgroundColor="@android:color/white">

                <com.prasadam.kmrplayer.subClasses.SquareImageview
                    android:id="@+id/vertical_slide_drawer_actual_image_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@mipmap/ic_launcher"
                    android:adjustViewBounds="true"
                    android:clickable="true"
                    android:foreground="?android:attr/selectableItemBackground"/>

            </android.support.v7.widget.CardView>

            <View
                android:layout_height="match_parent"
                android:layout_weight=".10"
                android:layout_width="0dp" />

        </LinearLayout>

        <android.support.v7.widget.Toolbar
            android:id="@+id/now_playing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:theme="@style/TransperantToolbar">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/now_playing_minimize_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="10dp"
                    android:paddingStart="0dp"
                    android:layout_alignParentStart="true"
                    android:src="@mipmap/ic_keyboard_arrow_down_white_24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/more_options_text" />

                <ImageView
                    android:id="@+id/now_playing_context_menu_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:paddingTop="10dp"
                    android:paddingEnd="0dp"
                    android:layout_alignParentEnd="true"
                    android:src="@mipmap/ic_dots_vertical_white_24dp"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="@string/more_options_text" />

            </RelativeLayout>

        </android.support.v7.widget.Toolbar>

        <include
            layout="@layout/include_vertical_sliding_drawer_minimal_layout"
            android:layout_width="match_parent"
            android:layout_height="55dp" />

        <android.support.v7.widget.RecyclerView
            android:nestedScrollingEnabled="true"
            android:layout_margin="10dp"
            android:visibility="invisible"
            android:id="@+id/now_playing_playlist_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/now_playing_toolbar"
            android:layout_alignParentEnd="true"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/now_playing_color_pallete_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="25"
        android:clickable="true"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        android:padding="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:padding="5dp">

                <RelativeLayout
                    android:id="@+id/now_playing_song_info_layout"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:clickable="true"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:orientation="horizontal"
                    android:layout_gravity="center_vertical">

                    <com.like.LikeButton
                        android:layout_alignParentStart="true"
                        app:icon_type="heart"
                        android:id="@+id/now_playing_fav_button"
                        app:like_drawable="@drawable/heart_on"
                        app:unlike_drawable="@mipmap/ic_favorite_border_black_24dp"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"/>

                    <ImageView
                        android:id="@+id/now_playing_song_context_menu"
                        android:layout_alignParentEnd="true"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:padding="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:src="@mipmap/ic_more_horiz_black_24dp"/>

                    <LinearLayout
                        android:id="@+id/song_details_layout"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:layout_toEndOf="@id/now_playing_fav_button"
                        android:layout_toStartOf="@id/now_playing_song_context_menu"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/now_playing_song_title_text_view"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textAppearance="?android:attr/textAppearanceLarge"
                            android:textSize="14sp"
                            android:text="Demons"
                            android:textColor="?android:attr/textColorPrimary"/>

                        <TextView
                            android:id="@+id/now_playing_song_artist_text_view"
                            android:layout_width="fill_parent"
                            android:layout_height="wrap_content"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:textSize="12sp"
                            android:text="Imagine Dragons"
                            android:textAppearance="?android:attr/textAppearanceSmall"
                            android:textColor="?android:attr/textColorSecondary"/>

                    </LinearLayout>

                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/now_playing_control_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp">

                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/now_playing_play_pause_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    app:backgroundTint="@color/white"
                    android:layout_centerHorizontal="true"
                    android:src="@mipmap/ic_play_arrow_black_36dp"
                    android:soundEffectsEnabled="true"/>

                <ImageView
                    android:id="@+id/now_playing_next_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:padding="10dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_toEndOf="@+id/now_playing_play_pause_button"
                    android:src="@mipmap/ic_chevron_right_white_36dp"/>

                <ImageView
                    android:id="@+id/now_playing_previous_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="10dp"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/ic_chevron_left_white_36dp"
                    android:layout_toStartOf="@id/now_playing_play_pause_button"/>

                <ImageView
                    android:id="@+id/now_playing_shuffle_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="?selectableItemBackgroundBorderless"
                    android:layout_alignParentStart="true"
                    android:layout_centerVertical="true"
                    android:clickable="true"
                    android:padding="10dp"
                    android:src="@mipmap/ic_shuffle_white_24dp"/>

                <ImageView
                    android:id="@+id/now_playing_repeat_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:background="?selectableItemBackgroundBorderless"
                    android:clickable="true"
                    android:padding="10dp"
                    android:src="@mipmap/ic_repeat_white_24dp"/>

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:visibility="gone"
        android:layout_above="@+id/now_playing_song_info_layout"
        android:gravity="center"
        android:id="@+id/now_playing_seek_bar_layout"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/now_playing_start_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0:00"
            android:textColor="@color/white"/>

        <app.minimize.com.seek_bar_compat.SeekBarCompat
            android:id="@+id/now_playing_SeekBar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxHeight="300sp"
            app:progressColor="#AFF123"
            app:progressBackgroundColor="#000"
            app:thumbColor="#FF4444"
            app:thumbAlpha="1.0"
            android:layout_toEndOf="@+id/now_playing_start_time"
            android:layout_toStartOf="@+id/now_playing_end_time"/>

        <TextView
            android:id="@+id/now_playing_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:text="4:24"
            android:textColor="@color/white"/>

    </RelativeLayout>

</LinearLayout>
